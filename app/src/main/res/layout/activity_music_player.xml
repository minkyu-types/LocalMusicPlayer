<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cover_flow"
        android:layout_width="0px"
        android:layout_height="0px"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/guideline_ver_10"
        app:layout_constraintEnd_toEndOf="@id/guideline_ver_90"
        app:layout_constraintTop_toBottomOf="@id/guideline_hori_10"
        app:layout_constraintBottom_toTopOf="@id/guideline_hori_54"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_ver_10"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_ver_90"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hori_10"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hori_54"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.54"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hori_90"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/player_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="TITLE is TITLE"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_margin="24px"
        android:ellipsize = "marquee"
        android:marqueeRepeatLimit = "marquee_forever"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/cover_flow"
        app:layout_constraintBottom_toTopOf="@id/controller_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/player_music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="artist by artist"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:ellipsize = "marquee"
        android:marqueeRepeatLimit = "marquee_forever"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/player_music_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controller_layout"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_ver_10"
        app:layout_constraintEnd_toEndOf="@id/guideline_ver_90"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hori_90">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/custom_slider"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/player_curr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_margin="4px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_slider"/>

        <TextView
            android:id="@+id/player_full_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_margin="4px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_slider"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            app:layout_constraintTop_toBottomOf="@id/player_curr_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shuffle_button"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prev_button"
                android:layout_width="144px"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/shuffle_button"
                app:layout_constraintEnd_toStartOf="@id/play_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play_button"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                android:layout_width="144px"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/play_button"
                app:layout_constraintEnd_toStartOf="@id/repeat_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/repeat_button"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>